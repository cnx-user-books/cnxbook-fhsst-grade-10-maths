                </m:mtd>
                <m:mtd columnalign="left">
                  <m:mrow>
                    <m:mrow>
                      <m:mi> USD </m:mi>
                      <m:mo>/</m:mo>
                      <m:mi> ZAR </m:mi>
                    </m:mrow>
