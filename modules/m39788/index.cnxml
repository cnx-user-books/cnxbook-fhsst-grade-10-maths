                <m:mo>/</m:mo>
                <m:mi> GBP </m:mi>
              </m:mrow>
              <m:mo>=</m:mo>
              <m:mrow>
                <m:mi> USD </m:mi>
                <m:mo>/</m:mo>
                <m:mi> ZAR </m:mi>
              </m:mrow>
              <m:mo>×</m:mo>
              <m:mrow>
                <m:mi> ZAR </m:mi>
                <m:mo>/</m:mo>
                <m:mi> GBP </m:mi>
              </m:mrow>
              <m:mo>.</m:mo>
            </m:mrow>
          </m:math>
        </equation>
        </item> <item> <label> Solve the problem </label>
        <equation id="id68280">
          <m:math overflow="scroll" mode="display">
            <m:mtable displaystyle="true">
              <m:mtr>
                <m:mtd columnalign="right">
                  <m:mrow>
                    <m:mi> USD </m:mi>
                    <m:mo>/</m:mo>
                    <m:mi> GBP </m:mi>
                  </m:mrow>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:mrow>
                    <m:mrow>
                      <m:mi> USD </m:mi>
                      <m:mo>/</m:mo>
                      <m:mi> ZAR </m:mi>
                    </m:mrow>
